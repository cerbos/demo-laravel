{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:allNonMajor",
        "schedule:weekly",
        ":automergeDisabled",
        ":combinePatchMinorReleases",
        ":gitSignOff",
        ":renovatePrefix",
        ":semanticCommitTypeAll(chore)",
        ":separateMultipleMajorReleases"
    ],
    "packageRules": [
        {
            "matchManagers": ["composer", "github-actions"],
            "groupName": "Dependencies",
            "groupSlug": "deps"
        }
    ],
    "labels": [
        "chore",
        "ci",
        "bots"
    ]
}
